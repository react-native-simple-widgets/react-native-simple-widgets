{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "react-native": ["react-native-web"]
        },
        "target": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        ".next",
        "out",
        "next.config.js"
    ],
    "include": [
        "next-env.d.ts",
        "node_modules/react-native-simple-elements",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js"
    ]
}
