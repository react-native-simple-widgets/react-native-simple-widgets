{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": false,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": false
    },
    "include": [
        "src",
        "components",
        "node_modules/react-native-simple-elements",
        "**/*.ts",
        "**/*.tsx"
    ]
}
